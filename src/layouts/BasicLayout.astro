---
import Footer from "./websiteParts/footer/Footer.astro";
import Header from "./websiteParts/header/Header.astro";

interface Props {
	pageName: string;
	title: string;
}

const { pageName, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/kab_icon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div id="Layout" class="mainBody">
			<div class="pageContents">
				{
					pageName !== "home" && pageName !== "index" && (
						<Header pageName={pageName} class="links" />
					)
				}
				<slot />
			</div>
		</div>
		<Footer pageName={pageName} />
		<!-- <div id="Contact">a</div> -->
	</body>
</html>

<style lang="scss" is:global>
	* {
		margin: 0;
		padding: 0;
		border-width: 0;
		scroll-behavior: smooth;
		font-family: "Ubuntu", sans-serif;

		overflow: visible;
	}
	body {
		overflow-x: hidden;
		background-color: #1e1e1e;
	}
	canvas {
		background-color: #1e1e1e;
	}

	#Contact {
		background-color: transparent;
		color: transparent;
		@media (min-width: 768px) {
			transform: translateY(5vh);
		}
	}
</style>

<style lang="scss">
	.mainBody {
		display: flex;
		flex-direction: row;
		background-color: #1e1e1e;
		overflow: visible;

		.links {
			&:hover {
				color: #fff;
			}
		}
	}

	.pageContents {
		margin: 5% 10% 0% 10%;
		width: 100%;
	}
</style>

---
import ReactFooter from "./Footer.jsx"
import * as styles from "./footer.module.scss"

let { pageName } = Astro.props
---

<div class="">
  <ReactFooter 
    pageName={pageName} 
    links={undefined} 
    styleTags={styles}
    client:load
  />
</div>

<style lang="scss" is:global>
  .wave-container {
    width: 100vw;
    height: 100%;
    display: flex;
    align-items: flex-end;

    display: flex;
    flex-direction: row;
    align-items: flex-end;
    justify-content: center;
    background-color: #1e1e1e;

    // Testing additions
    overflow: hidden;
    // position: absolute;
  }
</style>

<style lang="scss" >
  $footerHeight: 30vh;

  .contact{}

  .footer{
    width: 100vw;
    height: $footerHeight;

    display: flex;
    flex-direction: row;

    background-color: #1e1e1e;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
  }

  .content{
    color: #000;
    width: 40%;
    height: 15vh;
    margin: 5% 0 0 0;
    backdrop-filter: blur(20px); 
		background-color: rgba(255, 255, 255, 0.3);
    border-radius: 5em;

    transform: translateY(10vh);

    @media (max-width: 768px) {
      transform: translateY(0vh);
    }

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

</style>
---
import TypeWriter from './Typer.jsx'

const defaultStrings = [
  "Student",
  "Developer",
  "Collaborator",
  "Blah",
]

let { headingCls, strings } = Astro.props

if (strings === undefined) strings = defaultStrings
if (headingCls === undefined) headingCls = ""

// console.log(strings)
---

<TypeWriter 
  strings={strings}
  colorClass={""}
  headingCls={headingCls}

  client:load
/>

<style lang="scss" is:global>
  .cursor-blink {
    opacity: 1;
    animation: blink-animation 1s step-end infinite;
  }

  @keyframes blink-animation {
    from, to {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }
</style>

<style lang="scss">
	.mainBody {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		width: 100%;
		min-height: 70vh;
		margin-top: 1%;

		@media (max-width: 768px) {
			flex-direction: column;
			justify-content: flex-start;
		}
	}

	.link {
		color: #6e6ed7;
		transition: all 0.3s ease-in-out;
		&:hover {
			transform: scale(1.2);
			color: #fff;
		}
	}

	.myStoryHeader {
		font-size: 2em;

		@media (max-width: 768px) {
			font-size: 1.5em;
		}
	}

	.myStory {
		padding-top: 3%;
		width: 60%;
		display: flex;
		flex-direction: column;

		@media (max-width: 768px) {
			width: 100%;
			order: 1;
			font-size: 0.75em;
			padding-top: 3vh;
		}
	}

	.myStoryText {
		font-size: 1.25em;

		@media (max-width: 768px) {
			font-size: 1em;
		}
	}

	.leaveAReview {
	}

	.leaveAReviewHeader {
		width: 50%;
		font-size: 1.25em;

		@media (max-width: 768px) {
			width: 100%;
			order: 2;
		}
	}

	.leaveAReviewText {
		font-size: 1em;
	}

	.resume {
		flex-grow: 1;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.resumeContainer {
		height: 100%;
		transform: translateY(-5%);
	}

	.fileLink {
		font-size: 2.5em;

		@media (max-width: 768px) {
			font-size: 1.5em;
		}
	}

	.resumeEmbed {
		min-height: 55vh;
		width: 80%;
		background-color: #f5f5f5;
		@media (max-width: 768px) {
			height: 70vh; 
		}
	}
</style>
